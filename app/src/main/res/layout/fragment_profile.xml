<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="kl.law.inspector.vm.ProfileViewModel"/>
    </data>

    <ScrollView style="@style/MyApp.ViewContainer">
        <LinearLayout style="@style/MyApp.ChildViewContainer"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout style="@style/MyApp.ContentLine"
                android:layout_marginTop="12dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_default_photo"/>

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.name}"
                        android:textColor="@color/colorNormalTitle"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="@+id/imageView6"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toRightOf="@+id/imageView6"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/textView59"
                        android:layout_width="0dp"
                        android:layout_height="17dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:text="@{viewModel.department}"
                        android:textColor="@color/colorNormalSubtitle"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                        app:layout_constraintLeft_toLeftOf="@+id/textView58"
                        app:layout_constraintRight_toRightOf="@+id/textView58" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout style="@style/MyApp.ContentLine"
                android:layout_marginTop="12dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_department" />

                    <TextView
                        android:id="@+id/textView60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.department2}"
                        android:textColor="@color/colorNormalTitle"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                        app:layout_constraintLeft_toRightOf="@+id/imageView7"
                        app:layout_constraintTop_toTopOf="@+id/imageView7" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>
            <LinearLayout style="@style/MyApp.ContentLine">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_login_name" />

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.username}"
                        android:textColor="@color/colorNormalTitle"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                        app:layout_constraintLeft_toRightOf="@+id/imageView8"
                        app:layout_constraintTop_toTopOf="@+id/imageView8" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>
            <LinearLayout style="@style/MyApp.ContentLine">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_serial" />

                    <TextView
                        android:id="@+id/textView62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.serial}"
                        android:textColor="@color/colorNormalTitle"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                        app:layout_constraintLeft_toRightOf="@+id/imageView9"
                        app:layout_constraintTop_toTopOf="@+id/imageView9" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout style="@style/MyApp.ContentLine"
                android:layout_marginTop="12dp"
                android:onClick="@{viewModel.onCheckUpdateClicked}">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_update" />

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="检查更新"
                        android:textColor="@color/colorNormalTitle"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                        app:layout_constraintLeft_toRightOf="@+id/imageView10"
                        app:layout_constraintTop_toTopOf="@+id/imageView10" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>
            <LinearLayout style="@style/MyApp.ContentLine">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="16dp"
                    android:onClick="@{viewModel.onQuitClicked}">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_quit" />

                    <TextView
                        android:id="@+id/textView64"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="退出"
                        android:textColor="@color/colorNormalTitle"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                        app:layout_constraintLeft_toRightOf="@+id/imageView11"
                        app:layout_constraintTop_toTopOf="@+id/imageView11" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>


